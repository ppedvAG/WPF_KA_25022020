<Application x:Class="HalloRessourcen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HalloRessourcen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary>
                    <FontFamily x:Key="myFont" >Jokerman,Times New Roman</FontFamily>
                    <SolidColorBrush x:Key="myColor" Color="#63FC6A"/>
                </ResourceDictionary>
                
                <ResourceDictionary Source="/MyRessources;component/Dictionary1.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
